	<string name="retryIntervalSeconds">30</string>
	<string name="retryFetchSeconds">60</string>
	<!-- the max number of retries for socket connection establishment -->
	<string name="maxRetriesConnect">3</string>
	<!-- the max number of retries for fetch transaction -->
	<string name="maxRetriesTransaction">5</string>
	<!-- the max number of retries for fetch bodies operation in case of failing due to connection closed,
	that means fetch bodies operation will be retried (maxRetriesTransaction X maxretriesFetchRequest) times-->
