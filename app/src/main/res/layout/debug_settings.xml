<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@color/gray">

    <!-- user name -->

    <TextView
        android:id="@+id/userLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:text="@string/debug_screen_mailbox"
        android:textColor="@color/white" 
        android:layout_marginTop="10dip">
    </TextView>

    <EditText
        android:id="@+id/settingUserInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="phone">
    </EditText>

    <!-- password -->
    <TextView
        android:id="@+id/passwordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/debug_screen_password"
        android:textColor="@color/white" >
    </TextView>

    <EditText
        android:id="@+id/settingPasswordInput"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:lines="1">
    </EditText>

    <CheckBox
        android:id="@+id/tempPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/debug_screen_temp_password"
        android:textColor="@color/white" >
    </CheckBox>

    <!-- host -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="@string/debug_screen_choose_host" 
        android:textColor="@color/white"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="@string/debug_screen_insert_host"
        android:textColor="@color/white" />
    

    <EditText
        android:id="@+id/manualHost"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:lines="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <CheckBox
            android:id="@+id/sslOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/debug_screen_SSL_on"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/fakeLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="@string/debug_screen_Fake_Login"
            android:textColor="@color/white" />

    </LinearLayout>
    
    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dip"
        android:paddingLeft="30dip"
        android:paddingRight="30dip"
        android:text="@string/debug_screen_save"
        android:textSize="20sp"
         >
    </Button>

</LinearLayout>